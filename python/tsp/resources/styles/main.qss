/* 主窗口样式 */
QMainWindow {
    background-color: #f0f0f0;
}

/* 分组框样式 */
QGroupBox {
    border: 1px solid #cccccc;
    border-radius: 5px;
    margin-top: 1ex;
    font-weight: bold;
}

/* 按钮样式 */
QPushButton {
    background-color: #4caf50;
    color: white;
    border: none;
    padding: 5px 15px;
    border-radius: 3px;
}

/* 表格样式 */
QTableWidget {
    border: 1px solid #cccccc;
    gridline-color: #e0e0e0;
}

/* 列表样式 */
QListWidget {
    border: 1px solid #cccccc;
    border-radius: 3px;
}